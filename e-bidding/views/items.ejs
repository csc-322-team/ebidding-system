<h2>Listings</h2>
<div style="display: flex; flex-wrap: wrap; gap: 1rem;">
    <% items.forEach(item => { %>
        <div style="border: 1px solid #ccc; padding: 1rem; width: 300px;">
            <% if (item.image_url) { %>
                <img src="<%= item.image_url %>" alt="<%= item.name %>" style="width: 100%; height: auto;">
            <% } %>
            <h3><span class="<%= item.type %>">For <%= item.type %>:</span> <%= item.name %></h3>
            <p><strong>Starting Price:</strong> $<%= item.starting_price.toLocaleString() %></p>
            <p><strong>Deadline:</strong> <time datetime="<%= item.deadline_date %>"></time></p>
            <a href="/items/<%= item.id %>">View Details</a>
        </div>
    <% }) %>
</div>