<form action="/items/add" method="POST" enctype="multipart/form-data">
    <div>
        <label for="name">Item Name:</label><br>
        <input type="text" id="name" name="name" required>
    </div>
    <br>

    <div>
        <label for="description">Description:</label><br>
        <textarea id="description" name="description"></textarea>
    </div>
    <br>

    <div>
        <label for="starting_price">Starting Price:</label><br>
        <input type="number" id="starting_price" name="starting_price" required>
    </div>
    <br>

    <div>
        <label for="type">Type:</label><br>
        <select id="type" name="type" required>
            <option value="sale">Sale</option>
            <option value="rent">Rent</option>
        </select>
    </div>
    <br>

    <div>
        <label for="image">Upload Image:</label><br>
        <input type="file" id="image" name="image" accept="image/*">
    </div>
    <br>

    <div>
        <label for="deadline_date">Deadline Date:</label><br>
        <input type="date" id="deadline_date" name="deadline_date" required>
    </div>
    <br>

    <div>
        <button type="submit">Add Item</button>
    </div>
</form>

<script>
    const dateInput = document.getElementById('deadline_date');
    const today = new Date().toISOString().split('T')[0];
    dateInput.min = today;
</script>
